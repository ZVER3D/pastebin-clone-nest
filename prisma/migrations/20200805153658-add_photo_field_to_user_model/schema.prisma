datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int @id @default(autoincrement())
  name String @unique
  email String @unique
  password String
  photo String?
  pastes Paste[]
}

model Paste {
  id Int @id @default(autoincrement())
  title String?
  lang String @default("text")
  date DateTime @default(now())
  expiresIn DateTime?
  views Int @default(0)
  exposure Exposure
  author User? @relation(fields: [authorId], references: [id])
  authorId Int?
  shortId String @unique
  text String
}

enum Exposure {
  PRIVATE
  PUBLIC
  UNLISTED
}